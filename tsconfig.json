{
	"compilerOptions": {
		"noImplicitAny": false,
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"jsx": "react",
		"sourceMap": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": true,
		"lib": [ "dom", "es6", "es2015", "es2017", "esnext" ],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"pretty": true,
    "importHelpers": true,
    "declaration": true
	},
	"exclude": [
		"bin",
		"node_modules"
	]
}
